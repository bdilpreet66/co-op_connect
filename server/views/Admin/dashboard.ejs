<!DOCTYPE html>
<html>

<head>
    <title>Admin Dashboard</title>
    <!-- Add your CSS links here -->
    <%- include('../partials/css') %>
</head>

<body>
    <!-- Include the left navigation -->
    <%- include('../partials/adminNavbar') %>
        <div class="container">
        <div class="container mt-4 mb-3">
            <div class="row justify-content-between align-items-center">
                <div class="col-auto">
                    <h3>New Registrations</h3>
                </div>
                <div class="col-auto text-right">
                </div>
            </div>
        </div>
            <div class="container row">
                <% users.forEach(user=> { %>
                    <div class="job-box col-md-4 col-sm-6 col-lg-3 col-12 ">
                        <h5>
                            <a href="<%= user.userType === 'company' ? '/admin/schools/edit/' + user._id : '/admin/user/' + user._id + '/profile' %>">
                                <%= user.c_name || "[STUDENT]" %>
                            </a>
                        </h5>                        
                        <p><ion-icon name="mail-outline"></ion-icon><%= user.email %></p>
                        
                    </div>
                    <% }); %>
            </div>
        </div>
        <%- include('../partials/javascript') %>
</body>

</html>